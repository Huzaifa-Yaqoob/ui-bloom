{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/.source": ["./.source/index.ts"],
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/code/forms/react-select-forms/CreatableCode.tsx",
    "src/components/code/forms/react-select-forms/BasicCode.tsx",
    "src/components/code/forms/react-select-forms/AsyncCreatableCode.tsx",
    "src/components/code/forms/react-select-forms/Async.tsx",
    "src/components/code/forms/react-select-form.mdx",
    "src/components/code/forms/password-input-code.tsx",
    "src/components/code/forms/field-renderer-form.tsx"
  ],
  "exclude": ["node_modules"]
}
